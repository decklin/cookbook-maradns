##
# mararc file
#
# - Created by Chef Local Changes will be overridden. -
##

csv2 = {}
<% @zones.each do |zone| -%>
csv2["<%= zone %>."] = "db.<%= zone %>"
<% end -%>
bind_address = "<%= @bind_addresses.join(',') %>"
chroot_dir = "/etc/maradns"
maradns_uid = 109
maradns_gid = 109
maxprocs = 96
no_fingerprint = 0
default_rrany_set = 3
max_chain = 8
max_ar_chain = 1
max_total = 20
hide_disclaimer = "YES"
synth_soa_serial = <%= node[:maradns][:synth_soa_serial] %>

# The number of messages we log to stdout
# 0: No messages except for fatal parsing errors and the legal disclaimer
# 1: Only startup messages logged (default)
# 2: Error queries logged
# 3: All queries logged (but not very verbosely right now)
verbose_level = 1

# The following line must be uncommented to enable recursive queries
root_servers = {}

recursive_acl = "<%= Array(node[:maradns][:recursive_acl]).join(', ') %>"
zone_transfer_acl = "<%= node[:maradns][:zone_transfer_acl].join(', ') %>"
